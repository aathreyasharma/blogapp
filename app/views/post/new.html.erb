<h2 style="padding-bottom: 50px"><i>Pour it!</i></h2>
<div class="row text-centre" style="justify-content: center;">
	<div class="col-md-10" style="margin: 20px">
		<%= form_for @post,  url: { action: "create" }, html: { multipart: true }  do |f| %>
		 	<div class="form-group">
				<%= f.label "Title", style: "float: left" %>
				<%= f.text_field :title, class: 'form-control'  %>
		 	</div>
			<div class="form-group">
				<%= f.label "Description", style: "float: left" %>
				<%= f.text_area :text, class: 'form-control', rows: "10"  %>
			</div>
			<div class="form-group">
				<%= f.label "Image", style: "float: left" %>
				<%= f.file_field :image, class: 'form-control-file', style: "width: 100%"  %>
			</div>
			<div class="form-group" style="float: left; padding-top: 20px">
				<%= f.submit "Create", class: 'btn btn-primary' %>
			</div>
		<% end %>
	</div>
</div>