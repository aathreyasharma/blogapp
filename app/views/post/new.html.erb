<h2 style="padding-bottom: 50px">Create a New Post</h2>


 <%= form_for @post,  url: { action: "create" }, html: { multipart: true }  do |f| %>
 	<div>
		<%= f.label "Title" %>
		<%= f.text_field :title %>
 	</div>
	<div>
		<%= f.label "Desc" %>
		<%= f.text_area :text %>
	</div>
	<div>
		<%= f.label "Image" %>
		<%= f.file_field :image %>
	</div>
	<%= f.submit "Create" %>  
<% end %>