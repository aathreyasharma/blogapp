<div class='container-fluid'>
  <% if @posts.count > 0 %>
    <% @posts.each.with_index do |post, idx| %>
      <div class="row">
        <div class="row" style="margin: 2%">
          
          <div class="col" style="float: left;">
            <%= link_to post_path(post.id), html: {:"text-decoration" => :"none"} do %>
              <h3 class="display-4"><%= post.title%></h3>
              <%= image_tag("#{post.image(:medium)}", class: "rounded  mx-auto") %><br/>
            <% end %>  
          </div>
          
          <div class="col" style="vertical-align: middle; margin: auto;">
              <p style="padding: auto"><%= truncate(post.text, :length => 100, :omission => "...") { link_to 'Read More', post_path(post.id) } %></p>
          </div>

        </div>
      </div>
      <% if idx < @posts.length-1 %>
        <hr>
      <% end %>
      <br>
    <% end %>

  <% else %>
    <h2>Welcome to Blog App!!</h2>
  <% end %>
</div>
