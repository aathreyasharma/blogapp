<div class='flex'>
  <% if @posts.count > 0 %>
    <% @posts.each.with_index do |post, idx| %>
      <div class="row">
        <div class="row" style="margin: 2%">
          <div class="col-md-3" class="text-sm-center text-md-center text-lg-center text-xl-center">
            <%= link_to post_path(post.id), html: {:"text-decoration" => :"none"} do %>
              <h3 class="display-4"><%= post.title %></h3>
              <%= image_tag("#{post.image(:medium)}", class: "rounded  mx-auto") %><br/>
            <% end %>  
          </div>

          <div class="col-md-9"  style="padding: 5%">
            <p class="lead text-center text-sm-center text-md-center text-lg-center text-xl-center" style="justify-content: center;"><%= post.text %></p>
          </div>
        </div>
      </div>
      <% if idx < @posts.length-1 %>
        <hr>
      <% end %>
      <br>
    <% end %>

  <% else %>
    <h2>Welcome to Blog App!!</h2>
  <% end %>
</div>
